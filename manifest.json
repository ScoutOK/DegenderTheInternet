{
  "manifest_version": 2,

  "name": "Degender Your Internet",
  "description": "This extension removes all gendered language from your web experience",
  "version": "1.0",
  "icons": {
    "128": "/public/img/degenderLogoColor.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["/public/js/content.js"],
    "run-at": "document_end"
  }],
  "browser_action": {
    "default_icon": "/public/img/degenderLogoColor.png",
    "default_popup": "/index.html"
  },
  "background": {
    "scripts": ["/public/js/event.js"]
  },
  "permissions": [
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}
